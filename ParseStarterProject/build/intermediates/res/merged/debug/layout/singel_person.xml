<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:id="@+id/user"
        android:weightSum="1"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#c9c9c9">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/SingleUserImage"
            android:background="@drawable/shado"
            android:cropToPadding="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/singel_user_name"
            android:text="user name"
            android:inputType="text"
            android:textColor="#ff2c000c"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="0.82"
            android:layout_alignBottom="@+id/textView22"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/textView22"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="bottom"
            android:background="@android:drawable/ic_dialog_email"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#422f2f" />

    </RelativeLayout>

</LinearLayout>
