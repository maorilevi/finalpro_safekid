<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="projact.finalprojact.projact.Schedule_Event1"
    android:background="#6f73e0">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Event:"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/BackToManageEvent"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day:"
        android:id="@+id/textView16"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Save event"
        android:id="@+id/Event_Save_btn"
        android:background="@android:drawable/editbox_background_normal"
        android:visibility="visible"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/textView20"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/event_name"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_address"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventday"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_toEndOf="@+id/textView16"
        android:text="day"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/Event_delete_btn"
        android:background="@android:drawable/editbox_background_normal"
        android:visibility="visible"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/event_start_txt"
        android:textColor="#000000"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/editbox_background_normal"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/event__end_txt"
        android:textColor="#000000"
        android:layout_below="@+id/textView21"
        android:layout_alignEnd="@+id/textView21"
        android:background="@android:drawable/editbox_background_normal"
        android:textStyle="bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/BackToManageEvent"
        android:visibility="visible"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView16"
        android:background="@android:drawable/editbox_background_normal"
        android:text="back"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start time"
        android:id="@+id/textView19"
        android:textSize="20sp"
        android:layout_below="@+id/event_address"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end time"
        android:id="@+id/textView21"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save as start time"
        android:id="@+id/Event_Show_startbtn"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/event__end_txt"
        android:layout_alignRight="@+id/event__end_txt"
        android:layout_alignEnd="@+id/event__end_txt"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save as end time"
        android:id="@+id/Event_Show_endtime"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignBottom="@+id/timePicker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:background="#ffffffff"
        android:layout_below="@+id/event_start_txt"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignEnd="@+id/textView1" />
</RelativeLayout>
